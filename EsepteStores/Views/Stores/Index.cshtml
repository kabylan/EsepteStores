@model EsepteStores.Models.Store

@{
    ViewData["Title"] = "Index";
}

<h1>Мой магазин</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@

<div class="p-3">
    <div>
        <div class="row">
            <div class="p-2 col-6"><b>Название</b></div>
            <div class="p-2">@Model.Name</div>
        </div>
        <div class="row">
            <div class="p-2 col-6"><b>Пароль</b></div>
            <div class="p-2">@Model.Password</div>
        </div>
        <div class="row">
            <div class="p-2 col-6"><b>Логотип</b></div>
            <div>
                <img src="~/@Model.LogoFilePath" class="img-fluid rounded" style="width: 50px; height: 50px;" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    </div>
</div>