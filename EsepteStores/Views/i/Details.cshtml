
@model Product
@{
    Layout = "/Views/Shared/SecondLayout.cshtml";
}

    <link rel="stylesheet" href="~/owlcarousel/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/owlcarousel/dist/assets/owl.theme.default.min.css">

    <main id="main">

        <!-- ======= Pricing Section ======= -->
        <section id="pricing" class="pricing mt-5">
            <div class="container">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-white">
                        <li class="breadcrumb-item"><a href="/Products/@Model.StoreId">Товары</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                    </ol>
                </nav>
                <div class="box ">

                    <div class="owl-carousel owl-theme d-flex justify-content-center">
                        @foreach (ProductImage productImage in Model.ProductImages)
                        {
                            <div class="item">
                                <img class="img-fluid" src="~/@productImage.Path">
                            </div>
                        }
                    </div>

                    <div class="section-title mt-3">
                        <h2>@Model.Price</h2>
                        <h3><span>@Model.Name</span></h3>
                        <p>@Model.Description</p>
                    </div>
                    <div class="btn-wrap">
                        <a href="/Order/@Model.StoreId/@Model.Id" class="btn-buy">
                            Купить
                        </a>
                    </div>
                </div>

            </div>
        </section><!-- End Pricing Section -->

    </main>
